<Window x:Class="TerceApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Terce App" Height="400" Width="600">
    <Grid>
        <Border x:Name="terceContainer" BorderBrush="Black" BorderThickness="2" Background="White">
            <Canvas x:Name="canvas" Background="White"/>
        </Border>
        <TextBlock x:Name="scoreTextBlock" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10" FontSize="20" FontWeight="Bold"/>
    </Grid>
</Window>